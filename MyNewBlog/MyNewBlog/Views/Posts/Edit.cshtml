@model MyNewBlog.Models.Post

@{
    ViewBag.Title = "Edit";
}

<form action="@Href("~/Posts/Update")" method="post" id="postForm">
    @if(Model.POST_ID != -1)
    {
        <input type="hidden" name="id" value="@Model.POST_ID" />
    }
    @{ Model.P_DATE_TIME = DateTime.Now;}
    <input type="text" name="title" value="@Model.TITLE" /><br/>
    <input type="text" name="author" value="@Model.POST_AUTHOR"/><br />
    <textarea name="body" rows="10" cols="80">@Model.POST_BODY</textarea><br />
    <input type="submit" name="submit" value="Submit!" />
</form>

